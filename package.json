{
  "name": "anataleb-frontend",
  "version": "0.0.0",
  "scripts": {
    "ng": "ng",
    "start": "ng serve",
    "build": "ng build",
    "build:prod": "ng build --configuration=production",
    "build:analyze": "ng build --configuration=production --stats-json && webpack-bundle-analyzer dist/anataleb-frontend/browser/stats.json",
    "watch": "ng build --watch --configuration development",
    "test": "ng test",
    "serve:ssr:anataleb-frontend": "node dist/anataleb-frontend/server/server.mjs",
    "serve:prod": "npm run build:prod && npx http-server dist/anataleb-frontend/browser -p 8080 -c-1 -o",
    "lighthouse": "npm run build:prod && npx http-server dist/anataleb-frontend/browser -p 8080 & sleep 3 && lighthouse http://localhost:8080 --view --quiet --chrome-flags='--headless' && pkill -f http-server",
    "clean": "rm -rf dist .angular node_modules/.cache"
  },
  "prettier": {
    "printWidth": 100,
    "singleQuote": true,
    "overrides": [
      {
        "files": "*.html",
        "options": {
          "parser": "angular"
        }
      }
    ]
  },
  "private": true,
  "dependencies": {
    "@angular/animations": "^20.3.1",
    "@angular/common": "^20.3.1",
    "@angular/compiler": "^20.3.1",
    "@angular/core": "^20.3.1",
    "@angular/forms": "^20.3.1",
    "@angular/platform-browser": "^20.3.1",
    "@angular/platform-browser-dynamic": "^20.3.1",
    "@angular/platform-server": "^20.3.1",
    "@angular/router": "^20.3.1",
    "@angular/ssr": "^20.3.1",
    "@fortawesome/fontawesome-free": "^7.0.1",
    "@ngx-translate/core": "^17.0.0",
    "@ngx-translate/http-loader": "^17.0.0",
    "bootstrap": "^5.3.8",
    "bootstrap-icons": "^1.13.1",
    "express": "^5.1.0",
    "rxjs": "~7.8.0",
    "tslib": "^2.3.0",
    "zone.js": "~0.15.0"
  },
  "devDependencies": {
    "@angular/build": "^20.3.1",
    "@angular/cli": "^20.3.1",
    "@angular/compiler-cli": "^20.3.0",
    "@types/express": "^5.0.1",
    "@types/jasmine": "~5.1.0",
    "@types/node": "^20.17.19",
    "http-server": "^14.1.1",
    "jasmine-core": "~5.9.0",
    "karma": "~6.4.0",
    "karma-chrome-launcher": "~3.2.0",
    "karma-coverage": "~2.2.0",
    "karma-jasmine": "~5.1.0",
    "karma-jasmine-html-reporter": "~2.1.0",
    "lighthouse": "^11.0.0",
    "postcss": "^8.5.6",
    "postcss-scss": "^4.0.9",
    "stylelint": "^16.24.0",
    "stylelint-config-standard-scss": "^16.0.0",
    "stylelint-scss": "^6.12.1",
    "typescript": "~5.9.2",
    "webpack-bundle-analyzer": "^4.10.1"
  },
  "volta": {
    "node": "20.19.5",
    "npm": "10.9.3"
  }
}
